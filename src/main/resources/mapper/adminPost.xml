<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.runninghi.adminpost.query.infrastructure.repository.AdminPostMapper">

    <select id="getAdminPostTotalCnt" resultType="int">
        SELECT IFNULL(COUNT(*), 0)
          FROM TBL_ADMIN_POST
    </select>

    <select id="getAdminPostsList" resultType="com.runninghi.adminpost.command.domain.aggregate.entity.AdminPost">
        SELECT A.*, m.name
          FROM (SELECT ROW_NUMBER()OVER(ORDER By a.create_date DESC) AS RNUM,
                       a.admin_post_no, a.user_key, a.admin_post_title, a.admin_post_content,
                       a.admin_post_thumbnail_url, a.total_distance, a.toatl_time, a.max_slope,
                       a.kcal, a.create_date, a.update_date
                  FROM TBL_ADMINPOST
                 WHERE 1=1
                 <if test="search != null and search != ''">
                   AND (

                     )
                 </if>
                 )
    </select>


</mapper>
